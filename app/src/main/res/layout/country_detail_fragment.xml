<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/country_item_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/flag_image_view"
            android:layout_width="@dimen/detailed_flag_width"
            android:layout_height="@dimen/detailed_flag_height"
            android:scaleType="fitXY"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/country_item_margin"/>

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

        <TextView
            android:id="@+id/detail_native_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

        <TextView
            android:id="@+id/detail_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

        <TextView
            android:id="@+id/detail_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

        <TextView
            android:id="@+id/detail_population"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

        <TextView
            android:id="@+id/detail_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

        <TextView
            android:id="@+id/detail_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

        <TextView
            android:id="@+id/detail_demonym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

        <TextView
            android:id="@+id/detail_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/detailed_text_size"/>

    </LinearLayout>
</ScrollView>